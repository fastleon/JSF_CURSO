<?xml version="1.0" encoding="UTF-8"?>
//ver api de log4j, maneja los mensajes hacia consola, formato y nivel
<configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatterLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} -%msg%n"></PatterLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef red="Console" />
        </Root>
    </Loggers>
</configuration>
